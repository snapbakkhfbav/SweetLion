<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/kanjiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/blank"
        android:textSize="130sp" />
    
    <TextView
        android:id="@+id/englishText"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_below="@id/kanjiText"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/blank"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/kanaText"
        android:layout_width="wrap_content"
        android:layout_height="160sp"
        android:layout_below="@id/englishText"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/blank"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kanaText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/nextButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonBack"
            android:text="@string/back_button" />

        <Button
            android:id="@+id/backButtont"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonNext"
            android:text="@string/next_button" />

    </LinearLayout>

</RelativeLayout>
